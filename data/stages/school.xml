	<!-- Evil School -->
	<solid name="evilSky" x="-500" y="-1000" width="2400" height="2000" color="#000000" antialiasing="false" updateHitbox="true"/>

	<sprite name="evilBackTrees" x="-842" y="-80" sprite="evil/weebBackTrees"
		antialiasing="false" scale="6" scroll="0.5" updateHitbox="true"/>

	<sprite name="evilSchool" x="-816" y="-38" sprite="evil/weebSchool"
		antialiasing="false" scale="6" scroll="0.75" updateHitbox="true"/>

	<sprite name="evilStreet" x="-662" y="6" sprite="evil/weebStreet"
		antialiasing="false" scale="6" scroll="1" updateHitbox="true"/>

	<sprite name="evilTrees" x="-662" y="6" sprite="evil/weebTrees"
		antialiasing="false" scale="6" scroll="1" updateHitbox="true"/>

	<!-- Normal School -->
	<sprite name="sky" x="-626" y="-78" sprite="weebSky"
		antialiasing="false" scale="6" scroll="0.2" updateHitbox="true"/>

	<sprite name="backTrees" x="-842" y="-80" sprite="weebBackTrees"
		antialiasing="false" scale="6" scroll="0.5" updateHitbox="true"/>

